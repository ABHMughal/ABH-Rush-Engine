        acc = 0.0234375;//acceleration
        dcc = 0.25;//deceleration
        frc = 0.0234375;//friction
        grv = 0.0625;//gravity
        jmp = -3.5;//jumping speed
        sjmp = -2;//lowest jump
    }
    underwater = true
}
else 
