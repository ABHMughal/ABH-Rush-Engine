p_physics()

if !stageClear
{
    if character != consPlayerNameTails
        p_move_Sonic()
    else
        p_move_Tails()
}
else
{
    action = consPlayerActionNormal
    xdir = 1
    if abs(hsp) &lt; 9
    hsp += acc
}
